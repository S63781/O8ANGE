<style>
    :root {
        --neon-orange: #FF5F1F;
        --orange-glow: #FF8C00;
        --cyber-dark: #0A0E17;
        --cyber-medium: #1A1F2C;
        --cyber-light: #2A2F3C;
        --text-primary: #FFFFFF;
        --text-secondary: #FFB07F;
        --orange-glow-effect: 0 0 10px var(--neon-orange),
                           0 0 20px rgba(255, 95, 31, 0.5),
                           0 0 40px rgba(255, 95, 31, 0.3);
        --gradient-glow: linear-gradient(90deg, 
                        rgba(255, 95, 31, 0.1), 
                        rgba(255, 140, 0, 0.1));
        --font-cyber: 'Share Tech Mono', monospace;
    }

    .ui.vertical.menu {
        background: var(--cyber-dark);
        border: 1px solid var(--neon-orange);
        box-shadow: var(--orange-glow-effect);
        margin: 0;
        padding: 0;
        position: relative;
        min-width: 250px;
        max-width: 300px;
    }

    .ui.vertical.pointing.inverted.secondary.fluid.menu {
        height: calc(100vh - 2rem);
        overflow-y: auto;
        overflow-x: hidden;
        scroll-behavior: smooth;
        scrollbar-width: thin;
        scrollbar-color: var(--neon-orange) var(--cyber-dark);
        padding-bottom: 20px;
        display: flex;
        flex-direction: column;
        align-items: stretch;
        text-align: left;
        padding: 0;
    }

    /* Custom Scrollbar */
    .ui.vertical.pointing.inverted.secondary.fluid.menu::-webkit-scrollbar {
        width: 6px;
    }

    .ui.vertical.pointing.inverted.secondary.fluid.menu::-webkit-scrollbar-track {
        background: var(--cyber-dark);
    }

    .ui.vertical.pointing.inverted.secondary.fluid.menu::-webkit-scrollbar-thumb {
        background: var(--neon-orange);
        border-radius: 3px;
        box-shadow: var(--orange-glow-effect);
    }

    .ui.vertical.pointing.inverted.secondary.fluid.menu::-webkit-scrollbar-thumb:hover {
        background: var(--orange-glow);
    }

    .menu-section {
        position: sticky;
        top: 0;
        z-index: 1;
        background: var(--cyber-dark);
        border-bottom: 1px solid var(--neon-orange);
        padding: 12px 16px;
        color: var(--neon-orange);
        text-shadow: 0 0 5px var(--orange-glow);
        width: 100%;
        font-weight: bold;
        letter-spacing: 1px;
        text-align: left;
        padding: 12px 16px;
        margin: 0;
        display: block;
        width: 100%;
        box-sizing: border-box;
    }

    .ui.vertical.menu .item {
        padding: 10px 16px;
        transition: all 0.2s ease-out;
        border-left: 3px solid transparent;
        background: transparent;
        position: relative;
        overflow: hidden;
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 10px 16px;
        width: 100%;
        box-sizing: border-box;
        text-align: left;
    }

    .ui.vertical.menu .item:hover {
        background: linear-gradient(90deg, 
                    rgba(255, 95, 31, 0.15), 
                    transparent);
        transform: translateX(2px);
    }

    .ui.vertical.menu .item.active {
        background: linear-gradient(90deg, 
                    rgba(255, 95, 31, 0.2), 
                    transparent);
        border-left: 3px solid var(--neon-orange);
        color: var(--neon-orange);
    }

    .ui.vertical.menu .icon {
        width: 20px;
        margin-right: 12px;
        opacity: 0.9;
        transition: opacity 0.2s;
        flex-shrink: 0;
        margin-right: 12px;
        text-align: center;
        min-width: 20px;
    }

    .ui.vertical.menu .item:hover .icon {
        opacity: 1;
        transform: scale(1.1);
    }

    .four.wide.column {
        padding: 1rem;
        display: flex;
        justify-content: flex-start;
    }

    @media screen and (max-width: 768px) {
        .ui.vertical.menu {
            min-width: 100%;
            max-width: 100%;
        }
        
        .ui.vertical.pointing.inverted.secondary.fluid.menu {
            height: auto;
            max-height: calc(100vh - 4rem);
        }
        
        .ui.vertical.menu .item {
            padding: 14px 16px;
        }
    }

    @media (hover: hover) {
        .ui.vertical.menu .item:hover {
            background-image: linear-gradient(90deg,
                            rgba(255, 95, 31, 0.1),
                            transparent);
        }
    }

    /* Fix any potential flickering during hover */
    * {
        backface-visibility: hidden;
        -webkit-font-smoothing: antialiased;
    }
</style>

